<Window x:Class="WpfApplication1.RealModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RealModeWindow"
        Height="1080" Width="1920"  WindowStyle="None"
        Closing="MainWindow_Closing" WindowState="Maximized" Loaded="Window_Loaded_1" KeyDown="Window_KeyDown_1" ShowInTaskbar="False">

    <Grid>
        <Viewbox Grid.Row="1" HorizontalAlignment="Center">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <Grid x:Name="grid_ppt" HorizontalAlignment="Right" Width="1920" Margin="0,80,0,0">
            <WindowsFormsHost Name="windowsFormsHost2" Height ="720" VerticalAlignment="Top" Margin="700,130,0,0" HorizontalAlignment="Left" Width="960"  />
        </Grid>
        <Image x:Name="imgClose" HorizontalAlignment="Left" Height="60" Margin="1812,10,0,0" VerticalAlignment="Top" Width="60" Source="Image/x.png" MouseLeftButtonUp="imgClose_MouseLeftButtonUp"/>
    </Grid>

</Window>
