<Window x:Class="WpfApplication1.LectureRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfc="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="LectureRecordWindow" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized" Loaded="Window_Loaded" KeyDown="Window_KeyDown" Closing="Window_Closing">
    <Window.Background>
        <ImageBrush x:Name="imgBrushBg" />
    </Window.Background>

    <Grid HorizontalAlignment="Left" Height="1080" Width="1920" VerticalAlignment="Top">
        <Grid x:Name="grid_avatar" HorizontalAlignment="Left" Height="1080" Width="1920">
            <WindowsFormsHost Name="windowsFormsHost1" HorizontalAlignment="Left" Height="1000" Margin="0,80,0,0" VerticalAlignment="Top" Width="1920"  />
        </Grid>
        <Grid x:Name="grid_ppt" HorizontalAlignment="Left" Width="1920" Margin="0,80,0,0" MouseLeftButtonDown="grid_ppt_MouseLeftButtonDown">
            <WindowsFormsHost Name="windowsFormsHost2" Height ="720" VerticalAlignment="Top" Margin="480,130,0,0" HorizontalAlignment="Left" Width="960"  />
        </Grid>
        <Image x:Name="imgClose" HorizontalAlignment="Left" Height="60" Margin="1812,10,0,0" VerticalAlignment="Top" Width="60" Source="Image/x.png" MouseLeftButtonUp="imgClose_MouseLeftButtonUp"/>
    </Grid>
</Window>
