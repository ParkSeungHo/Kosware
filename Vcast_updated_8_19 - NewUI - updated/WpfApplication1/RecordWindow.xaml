<Window x:Class="WpfApplication1.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecordWindow" Height="200" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False">
    <Grid Height="200" Width="500">
        <Image x:Name="image_bg" Height="200" Width="500" Source="Image/녹화시작페이지bg.png" KeyDown="image_bg_KeyDown"/>
        <Image x:Name="image_play" Height="100" Width="100" Margin="93,26,307,74" Source="Image/녹화실행버튼.png" MouseLeftButtonDown="image_play_MouseLeftButtonDown" />
        <Image x:Name="image_stop" Height="65" Width="65" Margin="198,61,237,74" Source="Image/정지버튼.png" MouseLeftButtonDown="image_stop_MouseLeftButtonDown"/>
        <Image x:Name="image_delete" Height="65" Width="65" Margin="263,61,172,74" Source="Image/삭제버튼.png" MouseLeftButtonDown="image_delete_MouseLeftButtonDown" />
        <Image x:Name="image_deit" Height="65" Width="65" Margin="328,61,107,74" Source="Image/수정버튼.png" MouseLeftButtonDown="image_deit_MouseLeftButtonDown"/>
        <Label x:Name="label_timer" Content="00:00:00.00" Height="40" Width="300" Margin="93,131,107,29" Foreground="White" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>
